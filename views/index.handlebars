<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>That Burger Joint</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Add any burger you want to eat</h3>
      <form action="/" method="POST">
        <textarea type="text" name="burger_name"></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 undevoured">
      <h2>Menu</h2>

      {{#each undevoured}}
      <form action="/{{this.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="hidden" name="id" value="{{this.id}}">
          <p>Burger: {{this.burger_name}}</p>
          <button type="submit">Devour</button>
          <button type="submit">Delete</button>
        </div>
      </form>
      {{/each}}

    </div>

    <div class="col-md-6 devoured">

      <h2>Past Meals</h2>
      {{#each devoured}}
      <form action="/{{this.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <input type="hidden" name="id" value="{{this.id}}">
          <p>Burger: {{this.burger_name}}</p>
          <button type="submit">Delete</button>
        </div>
      </form>
      {{/each}}

    </div>


  </div>
</div>




